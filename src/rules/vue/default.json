{
  "vue/attributes-order": [
    "error",
    {
      "order": [
        "DEFINITION",
        "LIST_RENDERING",
        "CONDITIONALS",
        "RENDER_MODIFIERS",
        "GLOBAL",
        "UNIQUE",
        "TWO_WAY_BINDING",
        "OTHER_DIRECTIVES",
        "OTHER_ATTR",
        "EVENTS",
        "CONTENT"
      ]
    }
  ],
  "vue/html-closing-bracket-newline": [
    "error",
    {
      "multiline": "always",
      "singleline": "never"
    }
  ],
  "vue/html-closing-bracket-spacing": [
    "error",
    {
      "endTag": "never",
      "selfClosingTag": "always",
      "startTag": "never"
    }
  ],
  "vue/html-indent": [
    "error",
    "tab",
    {
      "alignAttributesVertically": true,
      "attribute": 1,
      "baseIndent": 1,
      "closeBracket": 0
    }
  ],
  "vue/html-quotes": [
    "error",
    "double"
  ],
  "vue/html-self-closing": [
    "error",
    {
      "html": {
        "component": "always",
        "normal": "always",
        "void": "always"
      },
      "math": "always",
      "svg": "always"
    }
  ],
  "vue/max-attributes-per-line": [
    "error",
    {
      "multiline": {
        "allowFirstLine": false,
        "max": 1
      },
      "singleline": 8
    }
  ],
  "vue/script-indent": [
    "error",
    "tab",
    {
      "baseIndent": 0,
      "switchCase": 1
    }
  ],
  "vue/space-infix-ops": [
    "error",
    {
      "int32Hint": false
    }
  ]
}
