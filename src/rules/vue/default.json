{
  "vue/attributes-order": [
    "error",
    {
      "order": [
        "DEFINITION",
        "LIST_RENDERING",
        "CONDITIONALS",
        "RENDER_MODIFIERS",
        "GLOBAL",
        "UNIQUE",
        "TWO_WAY_BINDING",
        "OTHER_DIRECTIVES",
        "OTHER_ATTR",
        "EVENTS",
        "CONTENT"
      ]
    }
  ],
  "vue/html-closing-bracket-newline": [
    "error",
    {
      "multiline": "always",
      "singleline": "never"
    }
  ],
  "vue/html-indent": [
    "error",
    "tab",
    {
      "alignAttributesVertically": true,
      "attribute": 1,
      "baseIndent": 1,
      "closeBracket": 0
    }
  ],
  "vue/html-quotes": [
    "error",
    "double"
  ],
  "vue/script-indent": [
    "error",
    "tab",
    {
      "baseIndent": 0,
      "switchCase": 1
    }
  ]
}
